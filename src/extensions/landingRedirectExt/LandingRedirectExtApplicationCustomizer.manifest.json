{
	"$schema": "https://developer.microsoft.com/json-schemas/spfx/client-side-extension-manifest.schema.json",

	"id": "2196e02f-20bc-4d3c-a967-c4e98420d1bb",
	"alias": "LandingRedirectExtApplicationCustomizer",
	"componentType": "Extension",
	"extensionType": "ApplicationCustomizer",

	// The "*" signifies that the version should be taken from the package.json
	"version": "*",
	"manifestVersion": 2,

	// If true, the component can only be installed on sites where Custom Script is allowed.
	// Components that allow authors to embed arbitrary script code should set this to true.
	// https://support.office.com/en-us/article/Turn-scripting-capabilities-on-or-off-1f2c515f-5d7e-448a-9fd7-835da935584f
	"requiresCustomScript": false,

	// above is default manifest, below are our mods/additions

	"supportedHosts": [
		"SharePointWebPart",
		"SharePointFullPage",
		"SharePointList"
	],

	"properties": {
		"defaultURL": "/sites/PD-Internal",
		"redirectRules": [
			{
				"groups": [
					"00000000-0000-0000-0000-000000000001" // Attorneys (Azure AD group objectId)
				],
				"URL": "/sites/attorney"
			},
			{
				"groups": [
					"00000000-0000-0000-0000-000000000002",
					"00000000-0000-0000-0000-000000000003"
				],
				"URL": "/sites/finance"
			}
		]
	}
}
